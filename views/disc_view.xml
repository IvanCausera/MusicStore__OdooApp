<?xml version="1.0" ?>
<odoo>
    <!-- Disc view -->
    <record id="view_form_disc" model="ir.ui.view">
        <field name="name">Disc Form</field>
        <field name="model">musicstore.disc</field>
        <field name="arch" type="xml">
            <form string="Disc">
                <sheet>
                    <!-- Content goes here: -->
                    <group name="group_top">
                        <group name="group_right">
                            <field name="id"/>
                            <field name="name"/>
                            <field name="disc_type"/>
                            <field name="price"/>
                            <field name="stock"/>
                            <field name="date_published"/>
                            <field name="company_id"/>
                        </group>
                        <group name="group_left">
                            <field name="image" widget="image"/>
                        </group>
                    </group>
                    <group name="group_buttom">
                        <group name="group_right">
                            <field name="group_ids"/>
                        </group>
                        <group name="group_left">
                            <field name="song_ids"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree disc view -->
    <record id="view_tree_disc" model="ir.ui.view">
        <field name="name">Disc List</field>
        <field name="model">musicstore.disc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="name"/>
                <field name="stock"/>
                <field name="duration" widget="float_time"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <!-- Search disc view -->
    <record id="view_search_disc" model="ir.ui.view">
        <field name="name">Disc Filters</field>
        <field name="model">musicstore.disc</field>
        <field name="arch" type="xml">
            <search>
                <field name="id"/>
                <field name="name"/>
                <filter name="With stock"
                        string="Stock"
                        domain="[('stock','>', 0)]"/>
                <filter name="Without stock"
                        string="No Stock"
                        domain="[('stock','=', 0)]"/>
            </search>
        </field>
    </record>
</odoo>